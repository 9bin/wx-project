.evaluate_list {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 80rpx 0 120rpx 0;
}

.evaluate_list .evaluate-header {
  padding: 24rpx;
  background: #fff;
  flex-wrap: wrap;
}

.evaluate_list .evaluate-header .evaluate-header-item {
  display: inline-block;
  background: #fff7f9;
  border-radius: 999rpx;
  border: 1rpx solid #ff0036;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  margin: 10rpx 30rpx 10rpx 0;
}
.evaluate_list .evaluate-header .evaluate-header-item.active {
  background: #ff0036;
  color: #fff;
}