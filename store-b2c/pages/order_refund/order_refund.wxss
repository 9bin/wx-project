/* pages/order_refund/order_refund.wxss */
.tab-bar {
  background: #fff;
  border-top: 1rpx solid #e3e3e3;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
}

.tab-bar~.order-list {
  padding-top: 100rpx;
}

.tab-bar .navigator {
  display: block;
  padding: 0 24rpx;
  text-align: center;
}

.tab-bar .navigator text {
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
}

.tab-bar .navigator.active text {
  color: #f00;
  border-bottom: 4rpx solid #f00;
}

.order-list {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
}

.order-list .order-item {
  background: #fff;
  margin-top: 20rpx;
}

.order-list .order-info {
  font-size: 28rpx;
  color: #888;
  padding: 32rpx 24rpx;
}

.goods-item {
  background: #fff;
  border-top: 1rpx solid #e3e3e3;
  padding: 32rpx 24rpx;
}

.goods-item.gift {
  background: #f5f5f5 !important;
}

.goods-item .goods-pic {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.goods-item .goods-name {
  margin-bottom: 10rpx;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.goods-item .attr-list,.goods-item .num {
    font-size: 26rpx;
    color: #999; 
}

.order-status {
  background: #f8f8f8;
  padding: 32rpx 24rpx;
}

.order-status .status-txt {
  padding-right: 32rpx;
}

.order-status .fi {
  color: #eb0c36;
  font-size: 40rpx;
}

.order-status .desc {
  font-size: 26rpx;
  color: #666;
  text-align: right;
}

.btnGroups {
  display: flex;
  justify-content: flex-end;
  padding: 0 24rpx 32rpx;
  background: #fff;
}

.btnGroups .btn {
  width: 160rpx;
  border-radius: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-left: 24rpx;
}

.btnGroups .btn.cancle {
  color: #999;
  border: 1rpx solid #ccc;
}

.btnGroups .btn.check {
  color: #eb0c36;
  border: 1rpx solid #eb0c36;
}