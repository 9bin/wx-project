/* pages/list/list.wxss */

.top {
  width: 100%;
  position: fixed;
  z-index: 999;
  left: 0;
  top: 0;
}

.top-search {
  width: 100%;
  height: 100rpx;
}

.top-search .search-block {
  padding: 0 24rpx;
}

.top-search .search-block navigator {
  position: relative;
  background: #f5f5f5;
  height: 64rpx;
  font-size: 30rpx;
  border-radius: 64rpx;
}

.top-search .search-block navigator .fi {
  margin: 0 15rpx;
  font-size: 50rpx;
  color: #999;
}

.top-navbar {
  border-top: 1rpx solid #e6e6e6;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.2);
  border-bottom: 1rpx solid #e6e6e6;
  height: 100rpx;
  background: #fff;
  color: #666;
}

.top-navbar .active {
  color: #eb0c36;
}

.goods-list {
  overflow-x: hidden;
  flex-wrap: wrap;
  margin-left: -10rpx;
}

.goods-list .li {
  width: 370rpx;
  background: #fff;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}

.goods-list .goods-item {
  display: inline-block;
  width: 100%;
  overflow: hidden;
  position: relative;
}

.goods-list .goods-item .lable {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
}

.goods-list .goods-item .lable .name {
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  width: 60rpx;
  height: 60rpx;
  color: #fff;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: clip;
  letter-spacing: 3rpx;
}

.goods-list .goods-item .image {
  width: 100%;
  height: 370rpx;
  display: block;
}

.goods-item-2 {
  padding: 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #e6e6e6;
}

.goods-item-2 .image {
  width: 160rpx;
  height: 160rpx;
  display: block;
}

.goods-item-2 .icon-tag{
  font-size:24rpx;
  color:#fff;
  background:#eb0c36;
  border-radius:5rpx;
  height: 40rpx;
  width: fit-content;
  padding: 0 8rpx;
}
