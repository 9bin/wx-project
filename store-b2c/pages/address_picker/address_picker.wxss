/* pages/address_picker/address_picker.wxss */
.bottom-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    font-size: 36rpx;
}

.bottom-bar navigator {
  width: 100%;
  background: #ff4544;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
}

.bottom-bar .fi-add {
  font-size: 40rpx;
  font-weight: bold;
}

.address-list {
    padding-bottom: 100rpx;
    border-top: 1rpx solid #E3E3E3;
}

.address-item {
    background: #fff;
    padding: 32rpx 24rpx;
    border-bottom: 1rpx solid #E3E3E3;
}

.userinfo {
    margin-bottom: 10rpx;
}

.userinfo .icon {
  background: #eb0c36;
  color: #fff;
  font-size: 24rpx;
  padding: 0 8rpx;
  border-radius: 5rpx;
}

.address-detail {
  color: #999;
  font-size: 26rpx;
}

.fi-edit {
  height: 50rpx;
  line-height: 50rpx;
  overflow-y: hidden;
  font-size: 60rpx;
  border-left: 1rpx solid #ccc;
  margin-left: 24rpx;
  padding-left: 24rpx;
  font-weight: 600;
  color: #999;
}
