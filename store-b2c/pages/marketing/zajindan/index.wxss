page {
  background: #570714;
}

.top-img {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.top-img image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.tip {
  position: relative;
  color: #fff;
}

.tip .desc {
  width: 100%;
  font-size: 30rpx;
}

.lotto-center {  
  position: relative;
  padding-top: 50rpx;
}

.lotto-center .eggGroups {
  width: 534rpx;
  margin: 0 auto;
  height: 160rpx;
}

.lotto-center .eggGroups .egg-item {
  position: relative;
  width: 178rpx;
  height: 160rpx;
}

.lotto-center .eggGroups .egg {
  position: absolute;
  left: 30rpx;
  top: 0;
  width: 118rpx;
  height: 160rpx;
}

.lotto-center .eggGroups .egg.egg-default {
  opacity: 1;
  visibility: visible;
}

.lotto-center .eggGroups .egg.egg-default.on {
  opacity: 0;
  visibility: hidden;
}

.lotto-center .eggGroups .egg.egg-on {
  opacity: 0;
  visibility: hidden;
}

.lotto-center .eggGroups .egg.egg-on.on {
  opacity: 1;
  visibility: visible;
}


.lotto-center .eggGroups .egg-ribbons {
  position: absolute;
  top: -15rpx;
  left: 30rpx;
  width: 118rpx;
  height: 45rpx;
  z-index: 10;
  animation: ribbons 0.3s;
}

.lotto-center .eggGroups .egg-hammer {
  position: absolute;
  top: -60rpx;
  left: 120rpx;
  opacity: 0;
  visibility: visible;
  width: 100rpx;
  height: 111rpx;
  z-index: 10;
  transition: all 1s;
  -moz-transition:all 1s;
  -webkit-transition:all 1s;
  -o-transition:all 1s;
}

.lotto-center .eggGroups .egg-hammer.hiting-1 {
  opacity:1;
  visibility:visible;
  left:100rpx;
  top:-30rpx;
}
.lotto-center .eggGroups .egg-hammer.rotateing {
  transform:rotate(60deg);
  left:160rpx;
  top: -60rpx;
  opacity:1;
  visibility:visible;
}
.lotto-center .eggGroups .egg-hammer.hiting-2 {
  transform:rotate(0deg);
  opacity:1;
  visibility:visible;
  left:100rpx;
  top:-30rpx;
  transition:all 0.1s;
  -moz-transition:all 0.1s;
  -webkit-transition:all 0.1s;
  -o-transition:all 0.1s;
}


@keyframes ribbons {
  0% {transform: translateY(33px);width: 0;height: 0;}
}

