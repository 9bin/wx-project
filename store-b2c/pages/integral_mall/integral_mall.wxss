/* pages/integral_mall/integral_mall.wxss */
.top-banner {
  width: 100%;
  height: 400rpx;
  z-index: 0;
}

.top-banner .back-banner {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  z-index: -1;
}

.top-banner .gold {
  font-size: 100rpx;
  color: #fff;
  font-weight: bold;
}

.top-banner .tip {
  border-radius: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  width: fit-content;
  padding: 0 24rpx;
  border: 1rpx solid #fff;
  color: #fff;
  font-size: 28rpx;
  margin-top: 30rpx;
}

.top-banner .fi {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  font-size: 60rpx;
  color: #fff;
}

.goods-list {
  overflow-x: hidden;
  flex-wrap: wrap;
  margin-left: -10rpx;
}

.goods-list .li {
  width: 370rpx;
  background: #fff;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}

.goods-list .goods-item {
  display: inline-block;
  width: 100%;
  overflow: hidden;
  position: relative;
}

.goods-list .goods-item .image {
  width: 100%;
  height: 370rpx;
  display: block;
}