/* pages/footprint/footprint.wxss */
.date {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: #fff;
  z-index: 999;
  border-top: 1rpx solid #e6e6e6;
  box-shadow: 2 -2rpx 0 0 rgba(0, 0, 0, .1);
  padding-bottom: 20rpx;
}

.year-month {
  height: 80rpx;
  width: 100%;
}

.year-month .fi {
  font-size: 40rpx;
  color: #666;
}

.week-name {
  font-size: 28rpx;
  color: #ccc;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.week-name>view {
  text-align: center;
}

.monthDay{
  width: 100%;
  transition: all .3s;
  overflow: hidden;
}

.monthDay .tr{
  width: 100%;
  
}

.monthDay .tr .day{
    display: block;
    height: 60rpx;
    padding-top: 10rpx;
    margin-top: 10rpx;
    margin-bottom: 5rpx;
    text-align: center;
    color: #999;
    border: 1rpx solid white;
}

.monthDay .tr .day.currentMonth {
  color: #333;
}

.monthDay .tr .day.active .gongli{
  color: #fff !important;
  background: #eb0c36 !important;
}

.monthDay .tr .day.select .gongli{
  border: 1rpx solid #eb0c36;
  
}

.monthDay .tr .day .gongli {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  margin: auto;
  text-align: center;
  line-height: 50rpx;
}

.downGroup {
  position: absolute;
  bottom: -32rpx;
  right: 24rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 64rpx;
  background: #fff;
  border: 1rpx solid #e6e6e6;
  text-align: center;
  line-height: 64rpx;
  transition: all .3s ease;
}

.downGroup .fi {
font-size: 50rpx;
}

.downGroup.up {
  transform: rotate(180deg);
}

.goods-list {
  overflow-x: hidden;
  flex-wrap: wrap;
  margin-left: -10rpx;
}
.goods-list .flex-grow-0 {
  width: 370rpx;
  background: #fff;
  margin-bottom: 10rpx;
  margin-left: 10rpx;  
}
.goods-list .goods-item {
  display: inline-block;
  width: 100%;
  overflow: hidden;
}
.goods-list .goods-item image {
  width: 100%;
  height: 370rpx;
  display: block;
}