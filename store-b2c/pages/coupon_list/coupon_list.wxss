/* pages/coupon_list/coupon_list.wxss */
.top-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  border-top: 1rpx solid #eee;
  background: #fff;
}

.top-bar .top-cat-item {
  color: #666;
  font-size: 32rpx;
  height: 100rpx;
}

.top-bar .top-cat-item .active {
  color: #ff0036 !important;
  border-color: #ff0036 !important;
}

.top-bar .top-cat-item view {
  border-bottom: 4rpx solid transparent;
  height: 100rpx;
  line-height: 100rpx;
  width: fit-content;
}

.poupon-container {
  position: absolute;
  top: 124rpx;
  left: 24rpx;
  right: 24rpx;
  bottom: 0;
}

.poupon-container .poupon-list {
  width: 100%;
  height: 100%;
}

.poupon-container .poupon-item {
  height: 200rpx;
  background: #fff;
  position: relative;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.poupon-container .poupon-item::before {
  left: -10rpx;
  display: block;
  content: '';
  position: absolute;
  top: 0;
  width: 20rpx;
  height: 100%;
  background: url("data:image/png;base64,") center center repeat-y;
  background-size: 10rpx auto;
}

.poupon-container .poupon-item .icon-is-reselve {
  position: absolute;
  right: 200rpx;
  top: -30rpx;
}

.poupon-container .poupon-item .item-left {
  width: 76%;
  padding: 20rpx;
}

.poupon-container .poupon-item .item-left .name {
  -webkit-line-clamp:2;
display:-webkit-box;
-webkit-box-orient:vertical;
overflow:hidden;
}

.poupon-container .poupon-item .item-left .date {
  color: #999;
  font-size: 24rpx;
}

.poupon-container .poupon-item .item-right {
  width: 23.5%;
  border-left: 1rpx dotted #ccc;
  position: relative;
}

.poupon-container .poupon-item .item-right::before {
    display: block;
    content: '';
    position: absolute;
    left: -10rpx;
    top: -10rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 20rpx;
    background: #f0f0f0;
}

.poupon-container .poupon-item .item-right::after {
    display: block;
    content: '';
    position: absolute;
    left: -10rpx;
    bottom: -10rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 20rpx;
    background: #f0f0f0;
}

.poupon-container .poupon-item .item-right .btn {
  width: 100rpx;
  height: 100rpx;
  border: 1rpx solid transparent;
  border-radius: 100rpx;
  font-size: 26rpx;
}

.poupon-container .poupon-item .item-right .btn.reselve {
  color: #ff0036;
  border-color: #ff0036 !important;
}

.poupon-container .poupon-item .item-right .btn.empty {
  color: #ccc;
  border-color: #ccc !important;
}

.poupon-container .poupon-item .item-right .btn.use {
  background: rgba(255, 233, 233, .8);
  color: #ff0036;
}