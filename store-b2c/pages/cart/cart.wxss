/* pages/cart/cart.wxss */

.top-bar {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background: #fff;
  padding: 0 24rpx;
  justify-content: flex-end;
  border-top: 1rpx solid #e6e6e6;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  box-shadow: 0 -1rpx 5rpx 0 #999;
  z-index: 999;
}

.bottom-bar .toPay {
  background: #eb0c36;
  color: #fff;
  font-size: 30rpx;
  padding: 0 40rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.bottom-bar .ranger .edit-btn {
  border: 1rpx solid #333;
  padding: 10rpx 24rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  margin-right: 24rpx;
}

.bottom-bar .ranger .submit-btn {
  border: 1rpx solid #eb0c36;
  padding: 10rpx 24rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  margin-right: 24rpx;
  color: #eb0c36;
}

.no-data-tip {
  margin-top: 100rpx;
}

.no-data-tip .fi {
  font-size: 400rpx;
  color: #999;
}

.no-data-tip .toBuyGoods {
  border: 1rpx solid #eb0c36;
  font-size: 36rpx;
  color: #eb0c36;
  border-radius: 10rpx;
  padding: 10rpx 24rpx;
  width: fit-content;
  margin: 50rpx auto;
}

.goods-list {
  padding: 82rpx 0 100rpx;
}

.goods-list .unit {
  margin-top: 24rpx;
}

.goods-list .unit .sentence {
  background: #f8f8f8;
  padding: 24rpx;
}

.tag {
  border-radius: 6rpx;
  border: 1rpx solid #eb0c36;
  color: #eb0c36;
  font-size: 24rpx;
  padding: 0 5rpx;
}

.goods-list .unit .sentence .sentence-name {
  padding: 0 10rpx;
  color: #999;
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods-list .unit .item {
  position: relative;
  height: 228rpx;
  z-index: 0;
  border-bottom: 1rpx solid #e6e6e6;
}

.goods-list .unit .item .goods-item {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  z-index: 1;
  transition: all 0.3s;
  padding-right: 24rpx;
  background: #fff;
}

.goods-list .unit .item .goods-item .image {
  width: 160rpx;
  height: 160rpx;
  display: block;
}

.goods-list .unit .item .goods-item .name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
}

.goods-list .unit .item .goods-item .property {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 24rpx;
  color: #999;
}

.goods-list .unit .item .goods-item .property .attr {
  width: fit-content;
  padding: 0 10rpx;
  border-right: 1rpx solid #e6e6e6;
}

.goods-list .unit .item .goods-item .property .attr:first-child {
  padding-left: 0 !important;
}

.goods-list .unit .item .goods-item .property .attr:last-child {
  border-right: none !important;
}

.goods-list .unit .item .goods-item .isReduction {
  border: 1rpx solid #eb0c36;
  font-size: 24rpx;
  color: #eb0c36;
  border-radius: 5rpx;
  width: fit-content;
  padding: 0 5rpx;
  margin-bottom: 15rpx;
}

.number-input-box {
  height: 60rpx;
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
}

.number-input-box .number-input {
  height: 60rpx !important;
  border: none;
  text-align: center;
  width: 89rpx;
  background: #eee;
  margin: 0 4rpx !important;
}

.number-input-box .number-btn {
  height: 100% !important;
  width: 60rpx;
  background: #eee;
}

.number-input-box .number-btn.disabled {
  background: #f6f6f6;
  color: #aaa;
}

.goods-list .unit .item .dele {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 80px;
  background: #eb0c36;
  z-index: 0;
  color: #fff;
  font-size: 36rpx;
}

.good-is-exis {
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(255, 255, 255, 0.3);
}
