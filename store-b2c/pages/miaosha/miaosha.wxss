/* pages/miaosha/miaosha.wxss */

.top-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  border-bottom: 1rpx solid #eee;
}

.screen {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 999;
  background: #fff;
  width: 90rpx;
  height: 120rpx;
  box-shadow: 0rpx -5rpx 15rpx rgba(0, 0, 0, .2);
}

.screen .fi-filter {
  font-size: 80rpx;
}

.start-time-list {
  overflow-y: visible !important;
}

.start-time-item {
  background: #fff;
  color: #666;
  font-weight: bold;
  width: 150rpx;
  text-align: center;
  height: 120rpx;
  border-bottom: 4rpx solid transparent;
}

.start-time-item>.flex-col {
  width: 100%;
}

.start-time-item .start-time {
  text-align: center;
  line-height: 1;
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.start-time-item .start-status {
  font-size: 26rpx;
  line-height: 1;
  font-weight: normal;
  text-align: center;
}

.start-time-item.active {
  border-bottom: 4rpx solid transparent;
  position: relative;
  color: transparent;
}

.time-over-bar {
  background: #fff;
  height: 80rpx;
  padding: 0 20rpx;
}

.limit-time-item {
  position: relative;
}

.limit-time-item image {
  display: inline-block;
}

.limit-time-item>view {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  font-size: 22rpx;
  color: #fff;
  line-height: 0.95;
}

.goods-list {
  padding-top: 220rpx;
  z-index: -1;
}

.goods-list .item {
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.goods-list .cover-pic {
  width: 262rpx;
  height: 262rpx;
  display: block;
}

.goods-list .goods-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 6rpx;
  font-size: 30rpx;
}

.goods-list .goods-desc {
  flex-wrap: wrap;
  font-size: 26rpx;
  color: #999;
  height: 1rem;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.goods-list .progress-bar {
  border-radius: 999rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
  height: 24rpx;
  width: 260rpx;
  background: #ffe4e4;
}

.goods-list .progress {
  background: #ff0036;
  border-radius: 999rpx;
  height: 100%;
  width: 0%;
  animation: progress 2s linear;
}

@keyframes progress {
  0% {width:0;}
}

.goods-list .statue-text {
  font-size: 9pt;
  color: #999;
  margin-bottom: 20rpx;
}

.goods-list .miaosha-price {
  color: #ff0036;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1;
}

.goods-list .price {
  color: #999;
  text-decoration: line-through;
  font-size: 24rpx;
  line-height: 1;
  margin-left: 10rpx;
}

.goods-list .btn {
  font-size: 30rpx;
  display: block;
  padding: 10rpx 24rpx;
  background: #ff0036;
  color: #fff;
  border-radius: 10rpx;
}

.goods-list .btn.yy {
  background: #39d196;
}

.goods-list.is_book {
  color: #ccc;
}