/* pages/evaluate_detail/evaluate_detail.wxss */
.evaluate-detail {
  border-top: 1rpx solid #e6e6e6;
  padding-bottom: 120rpx;
}

.footerProEval {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  width: 100%;
  background: #fff;
  padding: 20rpx 24rpx;
}

.footerProEval .inputContainer .input{
  height: 60rpx;
  background: #f5f5f5;
  font-size: 26rpx;
  padding: 0 24rpx;
  line-height: 60rpx;
  border-radius: 5rpx;
}

.footerProEval .actionGroup .actionItem {
  margin-left: 20rpx;
}

.footerProEval .fi {
  font-size: 50rpx !important;
}

.detailContainer {
  background: #fff;
  padding: 24rpx 24rpx 0 24rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.pic-list {
  margin-left: -15rpx;
  margin-top: -15rpx;
}

.pic-item {
  width: 220rpx;
  height: 220rpx;
  margin-left: 15rpx;
  margin-top: 15rpx;
  display: inline-block;
}

.attrGroup {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  color: #999;
}

.actionGroup .actionItem {
  margin-left: 15rpx;
}

.evalCurrentPro .goods-pic {
  width: 100rpx;
  height: 100rpx;
  margin: 24rpx;
}

.evalCurrentPro .goods-name {
  font-size: 30rpx;
  height:2.8em;
  line-height:1.4;
  overflow: hidden;
  text-overflow: ellipsis;
}

.evalDetailReplyList {
  width: 100%;
  margin-top: 20rpx;
  background: #fff;
}

.evalDetailReplyList .evalDetailItem {
  padding: 24rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.hide {
  display: none;
}

.actionItem.on {
  color: #ff0036;
}