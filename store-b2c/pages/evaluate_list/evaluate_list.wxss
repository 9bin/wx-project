/* pages/evaluate_list/evaluate_list.wxss */
.tab-bar {
  background: #fff;
  border-top: 1rpx solid #e3e3e3;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
}

.tab-bar~.order-list {
  padding-top: 120rpx;
}

.tab-bar .navigator {
  display: block;
  padding: 0 24rpx;
  text-align: center;
}

.tab-bar .navigator text {
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
}

.tab-bar .navigator.active text {
  color: #f00;
  border-bottom: 4rpx solid #f00;
}

.order-info {
  font-size: 28rpx;
  color: #888;
  padding: 32rpx 24rpx;
}

.goods-item {
  background: #fff;
  border-bottom: 1rpx solid #e3e3e3;
  padding: 32rpx 24rpx;
}

.goods-item:first-child {
  border-top: 1rpx solid #eee;
}

.goods-item .goods-pic {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.goods-item .goods-name {
  margin-bottom: 10rpx;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.goods-item .attr-list,.goods-item .num {
    font-size: 26rpx;
    color: #999; 
}

.order-item {
  background: #fff;
  padding: 32rpx 24rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.order-item .order-pic {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.order-item .order-name {
  margin-bottom: 10rpx;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.order-item .attr-list {
    font-size: 26rpx;
    color: #999; 
}

.totle-price {
  font-size: 26rpx;
  color: #666;
  display: flex;
  justify-content: flex-end;
  padding: 32rpx 24rpx;
}

.btnGroups {
  display: flex;
  justify-content: flex-end;
}

.btnGroups .btn {
  width: 160rpx;
  border-radius: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-left: 24rpx;
}

.btnGroups .btn.check {
  color: #eb0c36;
  border: 1rpx solid #eb0c36;
}

.btnGroups .btn.submit {
  color: #fff;
  background: #eb0c36;
}
