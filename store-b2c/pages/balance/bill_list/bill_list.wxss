/* pages/balance/bill_list/bill_list.wxss */
.tab-bar {
  background: #fff;
  border-top: 1rpx solid #e3e3e3;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
}

.tab-bar~.order-list {
  padding-top: 100rpx;
}

.tab-bar .navigator {
  display: block;
  padding: 0 24rpx;
  text-align: center;
}

.tab-bar .navigator text {
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
}

.tab-bar .navigator.active text {
  color: #f00;
  border-bottom: 4rpx solid #f00;
}

.choose-date {
  position: fixed;
  top: 100rpx;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 80rpx;
  background: #f7f7f7;
}
.choose-date image {
  position: absolute;
  right: 24rpx;
  top: 16rpx;
  width: 48rpx;
  height: 48rpx;
}
/* 列表 */

.detail-list {
  padding-top: 200rpx;
}
.detail-list .item {
  padding: 32rpx 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #e6e6e6;
}