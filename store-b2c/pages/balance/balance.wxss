/* pages/balance/balance.wxss */

.top-banner {
  width: 100%;
  height: 400rpx;
  z-index: 0;
  padding: 0 24rpx;
}

.top-banner .back-banner {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  z-index: -1;
}

.top-banner .gold {
  font-size: 90rpx;
  color: #fff;
  font-weight: bold;
}

.top-banner .tip {
  font-size: 28rpx;
  color: #fff;
}

.top-banner .nav {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  font-size: 28rpx;
  color: #fff;
}

.recharge {
  margin-top: 20rpx;
  background: #fff;
  height: 80rpx;
  padding: 0 24rpx;
}

.recharge .fi {
  font-size: 50rpx;
}

.recharge .fi.fi-coupon {
  color: #f8b004;
}